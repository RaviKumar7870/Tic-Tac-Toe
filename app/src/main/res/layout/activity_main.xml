<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/button"
        android:layout_width="269dp"
        android:layout_height="90dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/back3"
        android:text="Play  With  Friend"
        android:textAllCaps="false"
        android:textColor="#6227B0"
        android:textColorHighlight="#25B8B1"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="315dp"
        android:layout_height="102dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/back3"
        android:text="Play   With  Computer"
        android:textAllCaps="false"
        android:textColor="#6227B0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="79dp"
        android:layout_marginTop="85dp"
        android:background="#B742A2ED"
        android:text="Tic  Tac Toe"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0F1198"
        android:textColorHighlight="#147BAA"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>